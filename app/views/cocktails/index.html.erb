<h1>Our cocktail !</h1>

<div class="cards m-3">
<% @cocktails.each do |cocktail| %>

    <%= link_to cocktail_path(cocktail) do %>
    <div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
      <p>cocktail.name</p>
    </div>
  <% end %>
<% end %>

</div>

